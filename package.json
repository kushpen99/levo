{
  "name": "levo-story-app",
  "version": "1.0.0",
  "description": "Levo story-based learning app",
  "main": "index.html",
  "scripts": {
    "build-env": "npx dotenv -e .env -- node -e \"require('fs').writeFileSync('js/env.js', `window.APP_ENV = { CHAT_API_KEY: \\\"${process.env.CHAT_API_KEY}\\\" };\\n`)\"",
    "start": "npm run build-env && npx live-server --open=index.html --port=3000"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0"
  },
  "dependencies": {
    "openai": "^5.10.1"
  }
}
